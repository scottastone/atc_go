{
  // This is a sample configuration file for the Go ATC Simulator.
  // You can launch the game with these settings using the -config flag:
  // ./atc_go -config config.sample.json

  "max_aircraft": 15,     // The maximum number of aircraft allowed in the airspace at one time.
  "spawn_rate": 1.0,      // The base time (in seconds) between new aircraft spawns. Lower is faster/harder.
  "base_speed": 0.125,    // The base speed of aircraft in "units" per second. Higher is faster.
  "flow_traffic_proportion": 0.7 // The proportion (0.0 to 1.0) of aircraft that spawn on a predictable path.
}